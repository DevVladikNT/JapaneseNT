<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JapaneseNT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryVariant">@color/nightColorPrimaryDark</item>
        <item name="colorOnPrimary">@color/nightColorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nightColorAccent</item>
        <item name="colorSecondaryVariant">@color/nightColorAccent</item>
        <item name="colorOnSecondary">@color/nightColorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/nightColorText</item>
        <item name="android:editTextColor">@color/nightColorText</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>
</resources>